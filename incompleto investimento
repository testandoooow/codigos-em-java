package payback;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Variaveis variaveis = new Variaveis();
		Scanner info = new Scanner(System.in);
		System.out.println("Digite seu investimento: ");
		variaveis.investimento = info.nextDouble();
		do {
			System.out.println("Digite seu saldo: ");
			variaveis.saldo = info.nextDouble();
			if(variaveis.saldo > variaveis.investimento) {
				System.out.println("Saldo maior que o investimento.");
			}
			} while(variaveis.saldo > variaveis.investimento);
		
		variaveis.x = variaveis.investimento / variaveis.saldo;
		System.out.println(variaveis.investimento);
		System.out.println(variaveis.saldo);
		System.out.println("Retorno em "+variaveis.x+" meses");

	}

}

package payback;

public class Variaveis {
	double investimento = 0;
	double saldo = 0;
	double x = 0;

}
